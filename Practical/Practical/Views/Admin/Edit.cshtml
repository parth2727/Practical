@model DALayer.ViewModels.EmployeeModel

<h2>Edit Employee</h2>

<form asp-action="Edit">
    <label asp-for="EmployeeId">EmployeeId : </label>
    <input type="number" asp-for="EmployeeId" readonly>
    <div class="form-group">
    <label asp-for="Employee_Name" class="control-label">Employee_Name</label>
    <input asp-for="Employee_Name" class="form-control" />
    <span asp-validation-for="Employee_Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label">Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ContactNumber" class="control-label">ContactNumber</label>
        <input asp-for="ContactNumber" class="form-control" />
        <span asp-validation-for="ContactNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Emplyee_Password" class="control-label">Emplyee_Password</label>
        <input asp-for="Emplyee_Password" class="form-control" />
        <span asp-validation-for="Emplyee_Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LeaveBalance" class="control-label">LeaveBalance</label>
        <input asp-for="LeaveBalance" class="form-control" readonly/>
        <span asp-validation-for="LeaveBalance" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-warning">Save Changes</button>
    <a href="/Admin" class="btn btn-secondary" style="margin-left: 10px;">Cancel</a>
</form>
