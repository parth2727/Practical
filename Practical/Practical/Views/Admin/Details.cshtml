@model DALayer.ViewModels.EmployeeModel

<h2>Employee Details</h2>

<table class="table">
    <tr>
        <th>Employee ID</th>
        <td>@Model.EmployeeId</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>@Model.Employee_Name</td>
    </tr>
    <tr>
        <th>Email</th>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <th>Available Leave</th>
        <td>@Model.LeaveBalance</td>
    </tr>
</table>

<a href="/Admin" class="btn btn-secondary">Back to List</a>
